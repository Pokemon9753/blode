div(class="row post-container")
    div(class="col-md-offset-1 col-md-10 post")
        h1= post.title
        p(class="date")= post.date
        div
          = '\n\n'
          != post.content

          a(share-twitter data-text='"' + post.title + '"' data-url="http://myblog.com/posts/" + post.url data-via="my_twitter_handle" data-size="large")
