doctype xml
rss(version="2.0" xmlns:atom="http://www.w3.org/2005/Atom")
  channel
    title
      | My Blog
    description
      | My Blog
    link
      | http://www.example.com
    atom:link(href="http://www.example.com/feed.xml" rel="self" type="application/rss+xml")
    each post in posts
      item
        title= post.title
        link= 'http://www.example.com/posts/' + post.url
        guid= 'http://www.example.com/posts/' + post.url
        pubDate= post.longDate
